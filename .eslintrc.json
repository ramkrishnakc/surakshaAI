{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json", // Or specify your TypeScript project configuration
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier" // This must be the last entry to override conflicting rules
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    // Add or override specific ESLint rules here
    "@typescript-eslint/explicit-function-return-type": "off", // Example: turn off a rule
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }] // Example: configure a rule
  }
}